    </style>

    <style name="edittext_large_rounded" >
        <item name="android:layout_width">@dimen/width_large</item>
        <item name="android:layout_height">@dimen/height_large</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/default_background_color</item>

    </style>

    <style name="edittext_extralarge_rounded" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_extralarge</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/default_background_color</item>

    </style>






</resources>