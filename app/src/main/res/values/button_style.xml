<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_small" >
        <item name="android:layout_width">@dimen/width_small</item>
        <item name="android:layout_height">@dimen/height_small</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="button_medium" >
        <item name="android:layout_width">@dimen/width_medium</item>
        <item name="android:layout_height">@dimen/height_medium</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="button_large" >
        <item name="android:layout_width">@dimen/width_large</item>
        <item name="android:layout_height">@dimen/height_large</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="button_extralarge" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_extralarge</item>
        <item name="android:gravity">center</item>

    </style>



    <style name="button_small_rounded" >
        <item name="android:layout_width">@dimen/width_small</item>
        <item name="android:layout_height">@dimen/height_small</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="button_medium_rounded" >
        <item name="android:layout_width">@dimen/width_medium</item>
        <item name="android:layout_height">@dimen/height_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_border</item>

    </style>

    <style name="button_large_rounded" >
        <item name="android:layout_width">@dimen/width_large</item>
        <item name="android:layout_height">@dimen/height_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_border</item>

    </style>


    <style name="button_extralarge_rounded" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_extralarge</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/round_border</item>

    </style>






</resources>