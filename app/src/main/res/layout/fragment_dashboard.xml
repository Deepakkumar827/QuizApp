<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


<!--
            <TextView
                android:id="@+id/textView21"
                style="@style/textview_extralarge"
                android:layout_height="30dp"
                android:text="Quiz manager"
                android:textSize="24sp"

                android:textStyle="bold" />-->


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="10dp"
                android:background="@color/lightblue"
                android:text="standard"

                android:textSize="16sp" />

            <Spinner
                android:id="@+id/standard"
                style="@style/edittext_extralarge"
                android:background="@color/lightblue"/>



            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="10dp"
                android:background="@color/lightblue"
                android:text="subject"

                android:textSize="16sp" />

            <Spinner
                android:id="@+id/subject"
                style="@style/edittext_extralarge"
                android:background="@color/lightblue"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="10dp"
                android:background="@color/lightblue"
                android:text="chapter"

                android:textSize="16sp" />

            <Spinner
                android:id="@+id/chapter"
                style="@style/edittext_extralarge"
                android:background="@color/lightblue"/>





            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="20dp"

                android:layout_marginTop="10dp"
                android:background="@color/lightblue"
                android:text="types of question"

                android:textSize="16sp" />

            <Spinner
                android:id="@+id/test_type"
                style="@style/edittext_extralarge"
                android:background="@color/lightblue"/>






            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:hint="number of questions"
                android:textColorHint="@color/lightgreen"
                app:hintTextColor="@color/lightgreen">

                <EditText
                    android:id="@+id/no_of_question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:lines="1"

                    android:textSize="20sp"

                    />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp">


                <Button
                    android:id="@+id/exit"
                    style="@style/button_medium_rounded"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"

                    android:text="EXIT" />

                <Button
                    android:id="@+id/submit"
                    style="@style/button_medium_rounded"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="SUBMIT" />
            </androidx.appcompat.widget.LinearLayoutCompat>




        </LinearLayout>

        <ProgressBar
            android:id="@+id/quiz_manager_progressbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ProgressBar>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>