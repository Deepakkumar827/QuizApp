<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:backgroundTint="@color/lightgreen"
    tools:context=".ui.addquestion.IVAAddQuestionFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView4"
        style="@style/edittext_extralarge"
        android:text="creator"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:background="@color/lightyellow"/>

    <Spinner
        android:id="@+id/creator"
        style="@style/otherview_extralarge"
        android:tooltipText="tool tip"
        android:background="@color/lightyellow"

        />





    <TextView
        android:id="@+id/textView6"
        style="@style/textview_extralarge"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:background="@color/lightgreen"
        android:text="quetion" />
    <EditText
        android:id="@+id/question"

        style="@style/edittext_extralarge"
        android:inputType="textMultiLine"

        android:background="@color/lightgreen"
        android:hint="enter question"
        />




    <TextView
        android:id="@+id/textView7"
        android:background="@color/lightblue"
        android:textSize="16sp"
        style="@style/textview_extralarge"
        android:layout_height="20dp"
        android:text="option1" />

    <EditText
        android:id="@+id/option1"
        style="@style/edittext_extralarge"
        android:background="@color/lightblue"
        android:inputType="textMultiLine"
        android:hint="Option1"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textView8"
        android:background="@color/lightgreen"
        android:textSize="16sp"
        style="@style/textview_extralarge"
        android:layout_height="20dp"
        android:text="option2" />

    <EditText
        android:id="@+id/option2"
        style="@style/edittext_extralarge"
        android:background="@color/lightgreen"
        android:inputType="textMultiLine"
        android:hint="Option2"
        android:textSize="24sp"/>


    <TextView
        android:id="@+id/textView10"
        android:background="@color/lightblue"
        android:textSize="16sp"
        style="@style/textview_extralarge"
        android:layout_height="20dp"
        android:text="option3" />

    <EditText
        android:id="@+id/option3"
        style="@style/edittext_extralarge"
        android:background="@color/lightblue"
        android:inputType="textMultiLine"
        android:hint="Option3"
        android:textSize="24sp"/>



    <TextView
        android:id="@+id/textView12"
        android:background="@color/lightgreen"
        android:textSize="16sp"
        style="@style/textview_extralarge"
        android:layout_height="20dp"
        android:text="option4" />

    <EditText
        android:id="@+id/option4"
        style="@style/edittext_extralarge"
        android:background="@color/lightgreen"
        android:inputType="textMultiLine"
        android:hint="Option4"
        android:textSize="24sp"/>




    <TextView
        android:id="@+id/textView3"
        android:background="@color/lightred"
        android:textSize="16sp"
        style="@style/textview_extralarge"
        android:layout_height="20dp"
        android:text="answer" />

    <Spinner
        android:id="@+id/answer"
        style="@style/edittext_extralarge"
        android:background="@color/lightred"

        />



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="80dp">


        <Button
            android:id="@+id/exit"
            android:layout_weight="1"
            style="@style/button_medium_rounded"
            android:layout_marginRight="20dp"

            android:text="EXIT" />

        <Button
            android:id="@+id/submit"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            style="@style/button_medium_rounded"
            android:text="SUBMIT" />
    </androidx.appcompat.widget.LinearLayoutCompat>




</LinearLayout>